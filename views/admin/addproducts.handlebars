<div class= 'mt-4 mx-auto' style="width: 600px;">
  <h2 class="px-5 my-3">Add New Product</h2>
  <form method="POST" action="/admin/add">
    <div class="form-group ">
      <label for="productName">Product Name:</label>
      <input type="text" name = 'productName'  class="form-control" id="productName" required>
    </div>
    <div class="form-group mt-4 mb-4">
      <label for="description">Description:</label>
      <input type="text" name = 'description' class="form-control"  required>
    </div>
    <div class="form-group mt-4 mb-4">
      <label for="price">Price:</label>
      <input type="text" name = 'price' class="form-control" required>
    </div>

    <div class="form-group mt-4 mb-4">
      <label for="quantity">Quantity:</label>
      <input type="text" name = 'quantity' class="form-control"  required>
    </div>
    <div class="form-group ">
      <label for="image">Image Link:</label>
      <input type="text" name = 'image' class="form-control" required>
    </div>
    <div class='mt-4'>
      <button type="submit" class=" mx-4 btn btn-primary">Submit</button>
      <a class=" mx-4 btn btn-danger text-decoration-none" href="/admin">Cancel</a>
   </div>
  </form>
</div>