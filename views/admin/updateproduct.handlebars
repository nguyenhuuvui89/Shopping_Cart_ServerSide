<div class= 'mt-4 mx-auto' style="width: 600px;">
  <h2 class="px-5 my-3">Update Product</h2>
  <form method="POST" action="/admin">
    <div class="form-group ">
      <label for="productName">Product Name:</label>
      <input type="text" name = 'productName' value = '{{data.productName}}' class="form-control" id="productName">
      <input type="hidden" name = 'productId' class="form-control" value='{{data._id}}'>
    </div>
    <div class="form-group mt-4 mb-4">
      <label for="description">Description:</label>
      <input type="text" name = 'description' class="form-control" value='{{data.description}}'>
    </div>
    <div class="form-group mt-4 mb-4">
      <label for="price">Price:</label>
      <input type="number" name = 'price' class="form-control" value='{{data.price}}'>
    </div>

    <div class="form-group ">
      <label for="quantity">Quantity:</label>
      <input type="number" name = 'quantity' class="form-control" value="{{data.quantity}}">
    </div>
    <div class='mt-4'>
      <button type="submit" class=" mx-4 btn btn-primary">Update</button>
      <a class=" mx-4 btn btn-danger text-decoration-none" href="/admin">Cancel</a>
   </div>
  </form>
</div>